{
  "name": "xinjs",
  "version": "0.9.0",
  "description": "path-based state management for web apps",
  "source": "src/index.ts",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/module.js",
    "require": "./dist/main.js",
    "browser": "./dist/index.js",
    "default": "./dist/module.js",
    "types": "./dist/index.d.ts"
  },
  "homepage": "https://xinjs.net",
  "keywords": [
    "javascript",
    "typescript",
    "bun",
    "front-end",
    "back-end",
    "web-components",
    "css-variables"
  ],
  "scripts": {
    "start": "bun --watch dev.ts",
    "format": "bun eslint src demo --fix && bun prettier --write .",
    "test": "bun test",
    "latest": "rm -rf node_modules && npm update && bun install",
    "free-port": "lsof -ti:8018 | xargs kill -9"
  },
  "author": "Tonio Loewald",
  "license": "BSD-3-CLAUSE",
  "devDependencies": {
    "@happy-dom/global-registrator": "^17.4.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "bun-types": "^1.2.10",
    "caniuse-lite": "^1.0.30001712",
    "@types/node": "20.16.0",
    "chokidar": "^4.0.3",
    "eslint": "^8.57.1",
    "marked": "^5.1.2",
    "prettier": "^2.8.8",
    "typescript": "^5.8.3",
    "xinjs": "file:.",
    "xinjs-ui": "^0.9.10"
  },
  "files": [
    "/dist",
    "/LICENSE",
    "/README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tonioloewald/xinjs.git"
  },
  "ts-standard": {
    "ignore": [
      "dist",
      "cdn",
      "public",
      "www",
      "**/*.js",
      "**/*.mjs",
      "**/*.d.ts"
    ]
  }
}
