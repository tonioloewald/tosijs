{
  "name": "xinjs",
  "version": "0.3.1",
  "description": "path-based state management for web apps",
  "source": "src/index.ts",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "types": "dist/types.d.ts",
  "homepage": "https://xinjs.net",
  "keywords": [
    "javascript",
    "typescript",
    "bun",
    "front-end",
    "back-end"
  ],
  "scripts": {
    "start": "bun clear-targets && bun static-assets && bun parcel demo/index.html --dist-dir www",
    "clear-targets": "rm -rf www dist && mkdir -p www/assets",
    "static-assets": "cp readme.md docs/*.md xinjs-logo.svg www/assets && cp -r demo/assets/* www/assets",
    "lint": "bun ts-standard --fix src/*.ts",
    "make": "bun clear-targets && bun static-assets && bun test && bun parcel build",
    "pack": "bun lint && bun run make && npm pack --pack-destination ~",
    "test": "bun wiptest",
    "make-icons": "rm -rf static/icons && mkdir static/icons && npx fantasticon"
  },
  "author": "Tonio Loewald",
  "license": "BSD-3-CLAUSE",
  "devDependencies": {
    "@parcel/packager-ts": "^2.8.3",
    "@parcel/transformer-typescript-types": "^2.8.3",
    "babylonjs": "^5.31.2",
    "babylonjs-gui": "^5.32.1",
    "babylonjs-loaders": "^5.32.1",
    "babylonjs-materials": "^5.32.1",
    "bun-types": "^0.2.0",
    "marked": "^4.2.2",
    "parcel": "latest",
    "ts-standard": "^12.0.1",
    "typescript": "^5.0.4"
  },
  "files": [
    "/cdn",
    "/dist",
    "/LICENSE",
    "/README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tonioloewald/xinjs.git"
  },
  "ts-standard": {
    "ignore": [
      "dist",
      "cdn",
      "public",
      "www",
      "**/*.js",
      "**/*.mjs",
      "**/*.d.ts"
    ]
  },
  "targets": {
    "dist": {
      "isLibrary": true,
      "distDir": "dist",
      "outputFormat": "esmodule"
    },
    "www": {
      "source": "demo/index.html",
      "distDir": "www",
      "outputFormat": "esmodule"
    },
    "cdn": {
      "distDir": "cdn",
      "optimize": true,
      "isLibrary": true,
      "outputFormat": "esmodule"
    }
  }
}
