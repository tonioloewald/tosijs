{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "ts-build"
  },
  "include": ["src/**/*"],
  "exclude": ["node_nodules", "**.*.spec.ts"]
}