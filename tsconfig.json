{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true
  },
  "allowJs": true,
  "types": ["bun-types", "babylonjs"],
  "include": ["src/**/*"],
  "exclude": ["node_nodules", "**.*.spec.ts,*.test.ts"]
}